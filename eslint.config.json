{
  "extends": "standard",
  "env": {
    "browser": true,
    "worker": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["html", "jsdoc", "security"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error",
    "curly": "error",
    "no-unused-vars": ["error"],
    "indent": ["error", 2],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "object-curly-spacing": ["error", "always"],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-alert": "warn",
    "max-len": ["warn", { "code": 100 }],
    "jsdoc/require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "ClassDeclaration": true,
          "MethodDefinition": true
        }
      }
    ]
  }
}
